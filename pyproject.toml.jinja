[tool.poetry]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ description }}"
authors = ["Your Team <team@example.com>"]
packages = [{include = "app"}]

[tool.poetry.dependencies]
python = "^{{ python_version }}"
fastapi = "^0.115.12"
uvicorn = "^0.34.1"
opentelemetry-api = "^1.32.1"
opentelemetry-sdk = "^1.32.1"
opentelemetry-instrumentation-fastapi = { version = "^0.53b1", allow-prereleases = true }
opentelemetry-exporter-otlp = "^1.32.1"
opentelemetry-instrumentation = { version = "^0.53b1", allow-prereleases = true }
debugpy = "^1.8.14"
pytest = "^8.3.5"
httpx = "^0.28.1"
pre-commit = "^4.2.0"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
